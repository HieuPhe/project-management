extends ../../layouts/default.pug
include ../../mixins/box-head.pug 

block main 
	.container.my-3 
		.row 
			.col-12 
				+box-head("Thông tin tài khoản")

				if (user.fullName)
					p Họ tên: 
						b #{user.fullName}

				if (user.email)
					p Email: 
						b #{user.email}

				if (user.status)
					p Trạng thái: 
						b #{user.status}